@model Coding_Task_Int.Models.FizzBuzzNums
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <div class="paragraph">
        <p>Do you wish to input a custom start and end number? If no start and end number is specified the default numbers will be 1 and 100</p>
    </div>
    <div class="form-fields">
        <form class="startFinish-form" asp-action="AddNumbers" method="post">
            <div class="form-field">
                <label for="start">Start</label>
                <input class="start" type="number" name="start" value="1" asp-for="Start" />
            </div>
            <div class="form-field">
                <label for="end">End</label>
                <input class="end" type="number" name="end" value="100" asp-for="End" />
            </div>
            <div class="main-btn">
                <button type="submit" class="btn">Generate Numbers</button>
            </div>
        </form>
    </div>

    <div class="numbers-field">
        <div class="numbers"></div>
    </div>
</div>
